<div class="container" >
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
 <div class="col-sm-4">
	<%=form_for @sharecar, url: {:action=>"create"}, html:{:role=>"form"} do |f|%>
		<label for="email">Departure Point:</label>
		<div class="form-group">
		<%=f.text_field :departure_point, :class=>"form_control", :id=>"email"%>
		</div>
		<label for="pwd">Destination:</label>
		<div class="form-group">
		<%=f.text_field :destination, :class=>"form_control", :id=>"pwd"%>
		</div>
		<div class="form-group">
		<%=f.submit("Submit", :class=>"btn btn-primary btn-lg")%>
		</div>
		</div>
		 <div class="col-sm-4">
<label for="email">Date From:</label>
		<div class="form-group">
		<%=f.text_field :departure_point, :class=>"daterange", :id=>"email", :name=>"daterange"%>
		</div>
		<label for="pwd">Date To:</label>
		<div class="form-group">
		<%=f.text_field :destination, :class=>"form_control", :id=>"pwd"%>
		</div>
		</div>
		<div class="col-sm-4">
		<label for="pwd">Seats:</label>
		<div class="form-group">	
		<%=f.text_field :seats, :class=>"form_control"%>
		</div>
		<label for="pwd">Departure Time</label>
		<div class="form-group">	
		<%=f.text_field :seats, :class=>"timepicker"%>
		</div>
		</div>
		
		<%end%>
</div>
</div>
<script type="text/javascript">
$(function() {
    $('input[name="daterange"]').daterangepicker();
});
</script>
